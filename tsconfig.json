{
  "compilerOptions": {
    "target": "es6", // Set the target JavaScript version (adjust if needed)
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Standard library libraries
    "allowJs": true, // Allow compiling existing JavaScript files
    "rootDir": "src",
    //"strict": true, // Enable strict type checking
    "outDir": "dist", // Optional: Bundle compiled JS files (adjust path)
    "module": "commonjs", // Module system (commonjs for Node.js)
    "strictNullChecks": true, // Ensures non-null checks
    "esModuleInterop": true, // Allow usage of modern ES modules syntax 
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ], // Specify source directory (adjust if needed)
  "exclude": [
    "src/types/*.ts",
    "node_modules",
    ".vscode"
  ]
}